@{
    var spaceDataJson = ViewData["JsonSpace"] as string;
    var space = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(spaceDataJson);
}
<div class="container mt-5">
    <!-- Titre principal -->
    <h1 class="text-center">@space.name</h1>

    <!-- Description -->
    <p class="lead text-center">@space.description</p>

    <div class="row">
        <div class="col-md-6">
            <!-- Informations principales -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Details</h5>
                    <!-- <p><strong>Capacity:</strong> @space.capacity</p>
                    <p><strong>Status:</strong> @space.status</p>
                    <p><strong>Created At:</strong> @space.createdAt</p>
                    <p><strong>Updated At:</strong> @space.updatedAt</p> -->
                    <h6 class="mt-3">Location:</h6>
                    <p><strong>Latitude:</strong> @space.latitude</p>
                    <p><strong>Longitude:</strong> @space.longitude</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Photos -->
            <h3>Photos:</h3>
            <ul class="list-unstyled">
                @foreach (var photo in space.photos)
                {
                    <li>
                        <img src="@photo" class="img-fluid rounded mb-3" alt="Space Image">
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- Owner info -->
    <div class="mt-4">
        @if (space.owner != null)
        {
            <p><strong>Owner ID:</strong> @space.ownerId</p>
        }
        else
        {
            <p><strong>Owner:</strong> No owner assigned.</p>
        }
    </div>
</div>