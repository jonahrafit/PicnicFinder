@{
    var spaceDataJson = ViewData["JsonSpace"] as string;
    var space = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(spaceDataJson);
}
<div class="container mt-5">
    <!-- Titre principal -->
    <h1 class="text-center">@space.name</h1>

    <!-- Description -->
    <p class="lead text-center">@space.description</p>

    <div class="row">
        <div class="col-md-8">
            <!-- Photos -->
            <h3>Photos:</h3>
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
               @foreach (var photo in space.photos)
                {
                    <div class="carousel-item">
                        <img src="@photo" class="d-block w-100" alt="Image 1">
                    </div>
                }
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
        </div>
        <div class="col-md-4">
                <div class="card-body">
                    <!-- <p><strong>Capacity:</strong> @space.capacity</p>
                    <p><strong>Status:</strong> @space.status</p>
                    <p><strong>Created At:</strong> @space.createdAt</p>
                    <p><strong>Updated At:</strong> @space.updatedAt</p> -->
                    <h6 class="mt-3">Location:</h6>
                    <p><strong>Latitude:</strong> @space.latitude</p>
                    <p><strong>Longitude:</strong> @space.longitude</p>
                </div>
        </div>
    </div>

    <!-- Owner info -->
    <div class="mt-4">
        @if (space.ownerId != null)
        {
            <p><strong>Owner ID:</strong> @space.ownerId</p>
        }
        else
        {
            <p><strong>Owner:</strong> No owner assigned.</p>
        }
    </div>
</div>

