@{
    ViewData["Title"] = "Les espaces";
}
@{
    var villas = new List<dynamic>
{
new {
Image = "/images/villa.png",
Heart = true,
Title = "Villa Luxueuse",
Description = "Description de la villa luxueuse, idéale pour des vacances tranquilles...",
Activities = new[] { "Piscine", "Tennis", "Salle de réception" },
Price = "6000 Ar/heure"
},
new {
Image = "/images/villa.png",
Heart = false,
Title = "Villa Moderne",
Description = "Villa moderne avec des équipements de luxe, parfaite pour les séjours familiaux.",
Activities = new[] { "Salle de sport", "Jacuzzi" },
Price = "7000 Ar/heure"
},
new {
Image = "/images/villa.png",
Heart = true,
Title = "Villa Familiale",
Description = "Villa spacieuse pour des vacances en famille, avec plusieurs chambres.",
Activities = new[] { "Salle de jeux", "Terrains de basketball", "Piscine" },
Price = "5500 Ar/heure"
},
new {
Image = "/images/villa.png",
Heart = true,
Title = "Villa de Charme",
Description = "Une villa charmante pour des moments de détente et de convivialité.",
Activities = new[] { "Salle de cinéma", "Cuisine gastronomique", "Spa" },
Price = "8000 Ar/heure"
},
new {
Image = "/images/villa.png",
Heart = false,
Title = "Villa de Luxe",
Description = "Villa de luxe avec vue imprenable sur la mer, idéale pour des événements spéciaux.",
Activities = new[] { "Salle de réception", "Barbecue extérieur", "Hammam" },
Price = "10000 Ar/heure"
}
};
}
<style>
    .filter-container {
        width: 25%;
        padding: 20px;
    }

    .content-container {
        width: 75%;
        padding: 20px;
    }

    .card-columns {
        display: flex;
        flex-wrap: wrap;
        /* Permet le retour à la ligne */
        gap: 20px;
        /* Espacement entre les cartes */
        justify-content: flex-start;
        /* Aligne les cartes à gauche */
    }

    .card {
        flex: 0 0 30%;
        /* Définit une largeur de 30% */
        max-width: 30%;
        box-sizing: border-box;
        /* Inclut le padding et la bordure dans la largeur */
    }

    .card-img-container {
        position: relative;
    }

    .card-img-top {
        width: 100%;
        height: auto;
        display: block;
    }


    .heart-icon {
        position: absolute;
        top: 5px;
        /* Positionné plus haut */
        right: 10px;
        font-size: 24px;
        /* Taille ajustée */
        cursor: pointer;
        /* Forme circulaire */
        padding: 5px;
        background-color: transparent;
        border: 3cm;
        /* Fond transparent */
        color: white;
        /* Couleur du texte */
    }

    .card-body {
        padding: 15px;
        text-align: left;
    }

    .card-text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        /* Limite la largeur à celle du conteneur */
    }
</style>
<div class="container mt-4">
    <!-- Ligne 1: Titre centré -->
    <h1 class="text-center">Titre de la Page :AMPIO NOMBRE de PERSONNE heart-icon </h1>

    <div class="row mt-4">
        <!-- Ligne 2: Divisé en 1/4 pour le filtre et 3/4 pour le contenu -->
        <div class="col-md-3 filter-container">
            <!-- Filtre -->
            <h5>Filtrer la liste</h5>
            <form>
                <div class="form-group">
                    <label for="filterTitle">Filtrer par Titre:</label>
                    <input type="text" class="form-control" id="filterTitle" placeholder="Ex: Villa Luxueuse">
                </div>
                <div class="form-group">
                    <label for="filterActivities">Filtrer par Activités:</label>
                    <select multiple class="form-control" id="filterActivities">
                        <option value="Piscine">Piscine</option>
                        <option value="Tennis">Tennis</option>
                        <option value="Salle de réception">Salle de réception</option>
                        <option value="Salle de sport">Salle de sport</option>
                        <option value="Jacuzzi">Jacuzzi</option>
                        <option value="Salle de jeux">Salle de jeux</option>
                        <option value="Terrains de basketball">Terrains de basketball</option>
                        <option value="Salle de cinéma">Salle de cinéma</option>
                        <option value="Cuisine gastronomique">Cuisine gastronomique</option>
                        <option value="Spa">Spa</option>
                        <option value="Barbecue extérieur">Barbecue extérieur</option>
                        <option value="Hammam">Hammam</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="filterPrice">Filtrer par Prix:</label>
                    <select class="form-control" id="filterPrice">
                        <option value="1">Moins de 6000 Ar</option>
                        <option value="2">Entre 6000 et 8000 Ar</option>
                        <option value="3">Plus de 8000 Ar</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </form>
        </div>


        <div class="col-md-9 content-container">
            <!-- 3/4: Divisé en 3 colonnes de Card -->
            <div class="card-columns">
                @foreach (var villa in villas)
                {
                    <div class="card">
                        <div class="card-img-container">
                            <img src="@villa.Image" class="card-img-top" alt="Villa Image">
                            <span class="heart-icon">
                                <i class="@(villa.Heart ? "fa fa-heart" : "fa-regular fa-heart")"></i>
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="activities">
                                @foreach (var activity in villa.Activities)
                                {
                                    <span class="activity">@activity</span>
                                }
                            </div>
                            <h5 class="card-title">@villa.Title</h5>
                            <p class="card-text">@villa.Description</p>
                            <p class="price">Prix: @villa.Price</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>