<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PicnicFinder</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item @((ViewData["ActiveMenu"]?.ToString() == "Dashboard") ? "active" : "")">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item @((ViewData["ActiveMenu"]?.ToString() == "GestionDesEspaces") ? "active" : "")">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Space" asp-action="Index">
                            Gestion des espaces
                        </a>
                    </li>
                    <li
                        class="nav-item @((ViewData["ActiveMenu"]?.ToString() == "GestionDesUtilisateurs") ? "active" : "")">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
                            Gestion des utilisateurs
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <form action="@Url.Action("Logout", "Auth")" method="post">
                            <button type="submit" class="btn btn-link nav-link text-dark">Deconnexion</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>